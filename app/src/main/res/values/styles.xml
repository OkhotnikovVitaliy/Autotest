<resources>

<!-- Base application theme. -->

        <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
            <!-- Customize your theme here. -->
            <item name="colorPrimary">@color/colorPrimary</item>
            <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
            <item name="colorAccent">@color/app_theme_cyan</item>
        </style>

    <style name="Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
         <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>
    <style name="almost_zero_style">
        <item name="android:layout">@drawable/selector</item>
    </style>

    <style name="frame_red" >
        <item name="android:background">@drawable/frame</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="main_menu_image_container_style" >
        <item name="android:gravity">center</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>

        <item name="android:background">@drawable/circle_gradient_bg_vector</item>
    </style>

    <style name="signs_style" >
        <item name="android:gravity">center</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/gradient_signs</item>
    </style>

    <style name="main_menu_image_style" >
    <item name="android:gravity">center</item>
    <item name="android:layout_marginBottom">5dp</item>
    <item name="android:layout_width">50dp</item>
    <item name="android:layout_height">50dp</item>
    </style>
    <style name="main_menu_text_style" >
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">bottom</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="signs_text_style" >
    <item name="android:textSize">12sp</item>
    <item name="android:textColor">@color/white</item>
    <item name="android:gravity">bottom</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="main_text_style" >
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">bottom</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="main_menu_text_style.Small">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="DownUpActivity" parent="@android:style/Animation.Activity">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/app_theme_cyan</item>

        <item name="android:activityOpenEnterAnimation">@anim/activity_down_up_enter</item>
        <item name="android:activityOpenExitAnimation">@anim/activity_down_up_exit</item>
        <item name="android:activityCloseExitAnimation">@anim/activity_down_up_close_exit</item>
        <item name="android:activityCloseEnterAnimation">@anim/activity_down_up_close_enter</item>
    </style>

    <style name="CustomTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowAnimationStyle">@style/FadeAnimation</item>

    </style>
    <style name="FadeAnimation">

    <item name="android:activityOpenEnterAnimation">@anim/activity_down_up_enter_single</item>

    <item name="android:activityOpenExitAnimation">@anim/activity_down_up_exit_single</item>

    <item name="android:activityCloseEnterAnimation">@anim/activity_down_up_close_enter_single</item>

    <item name="android:activityCloseExitAnimation">@anim/activity_down_up_close_exit_single</item>

</style>

    <style parent="ThemeOverlay.AppCompat.Dark.ActionBar" name="AppTheme.AppBarOverlay"/>
    <style parent="ThemeOverlay.AppCompat.Light" name="AppTheme.PopupOverlay"/>
    <style parent="TextAppearance.AppCompat" name="TextOnLoadPage">
    <item name="android:fontFamily">@font/lora_bold</item>
    <item name="android:textColor">@android:color/white</item>
    <item name="android:textSize">44sp</item>
    <item name="android:gravity">center</item>
    </style>

    <style name="CustomTextView" parent="@android:style/Widget.TextView">
        <item name="android:fontFamily">@font/lora_bold</item>
    </style>

    <style name="pagerTabStripText_style">

    <item name="android:textSize">16sp</item>

    <item name="android:textColor">@color/white</item>

</style>

    <style name="NavigationTheme" parent="AppTheme">
       <item name="listPreferredItemHeightSmall">180dp</item>
    </style>



</resources>

